{
    "name": "rclonetray",
    "productName": "RcloneTray",
    "title": "RcloneTray",
    "version": "0.0.0",
    "releaseType": "prerelease",
    "description": "Simple Rclone bookmark manager GUI that stays in the system tray.",
    "repository": {
        "type": "git",
        "url": "https://github.com/dimitrov-adrian/RcloneTray"
    },
    "keywords": [
        "Tray",
        "Mount",
        "Rclone",
        "Connect",
        "Remote Filesystem",
        "Network",
        "Utilities"
    ],
    "author": "Adrian Dimitrov <dimitrov.adrian@gmail.com>",
    "bugs": {
        "url": "https://github.com/dimitrov-adrian/RcloneTray/issues"
    },
    "license": "MIT",
    "main": "src/main.js",
    "scripts": {
        "postinstall": "electron-builder install-app-deps && ./update-rclone-binaries.sh",
        "start": "node_modules/.bin/electron . --debug",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "publish": "build -p always --platform all --x64"
    },
    "eslintConfig": {
        "fix": true,
        "envs": {
            "es6": true,
            "browser": false,
            "node": true
        }
    },
    "build": {
        "appId": "com.github.dimitrov-adrian.rclonetray",
        "files": [
            "src"
        ],
        "asar": true,
        "asarUnpack": [
            "src/ui/icons/*"
        ],
        "extraResources": [
            "rclone/${platform}/*",
            "rclone/LICENSE"
        ],
        "compression": "normal",
        "mac": {
            "category": "public.app-category.utilities",
            "type": "distribution",
            "publish": [
                "github"
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "publish": [
                "github"
            ]
        },
        "win": {
            "target": "nsis",
            "publish": [
                "github"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "dependencies": {
        "chokidar": "^2.0.4",
        "electron-context-menu": "^0.10.1",
        "electron-is-dev": "^1.0.1",
        "electron-updater": "^3.2.2",
        "form-serialize": "^0.7.2",
        "ini": "^1.3.5"
    },
    "devDependencies": {
        "electron": "4.0.0-beta.7",
        "electron-builder": "latest",
        "electron-reload": "^1.2.5",
        "standard": "*"
    }
}
